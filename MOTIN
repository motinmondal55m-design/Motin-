  <script>
    /*******************************
     * Matrix background (with color-shift glow)
     *******************************/
    const canvas = document.getElementById('matrix');
    const ctx = canvas.getContext('2d');
    let width = canvas.width = window.innerWidth;
    let height = canvas.height = window.innerHeight;

    const letters = '01ABCDEFGHIJKLMNOPQRSTUVWXYZ';
    const fontBase = 16;
    let fontSize = fontBase;
    let columns = Math.floor(width / fontSize);
    let drops = Array(columns).fill(1);

    // color shift parameters
    let hue = 160;

    function drawMatrix(){
      // fade background slowly (creates trail)
      ctx.fillStyle = 'rgba(0,0,0,0.06)';
      ctx.fillRect(0,0,width,height);

      // color changes over time
      hue = (hue + 0.2) % 360;
      ctx.fillStyle = `hsl(${hue} 100% 60%)`;
      ctx.font = fontSize + 'px monospace';

      for(let i=0;i<drops.length;i++){
        const text = letters.charAt(Math.floor(Math.random()*letters.length));
        ctx.fillText(text, i * fontSize, drops[i]*fontSize);

        if(drops[i]*fontSize > height && Math.random() > 0.975) drops[i] = 0;
        drops[i]++;
      }
    }
    let matrixInterval = setInterval(drawMatrix, 33);

    window.addEventListener('resize', () => {
      width = canvas.width = window.innerWidth;
      height = canvas.height = window.innerHeight;
      fontSize = Math.max(fontBase, Math.floor(window.innerWidth / 80));
      columns = Math.floor(width / fontSize);
      drops = Array(columns).fill(1);
    });

    /*******************************
     * Sticky nav highlight + scroll fade + nav shrink
     *******************************/
    const navLinks = document.querySelectorAll('.nav-link');
    const sections = Array.from(navLinks).map(link => document.querySelector(link.getAttribute('href')));
    const nav = document.getElementById('mainNav');

    window.addEventListener('scroll', () => {
      const scrollPos = window.scrollY + window.innerHeight/3;

      // highlight nav
      sections.forEach((section, i) => {
        if(!section) return;
        if(scrollPos >= section.offsetTop && scrollPos < section.offsetTop + section.offsetHeight){
          navLinks.forEach(l=>l.classList.remove('active'));
          if(navLinks[i]) navLinks[i].classList.add('active');
        }
      });

      // nav scrolled effect
      if(window.scrollY > 40) nav.classList.add('scrolled'); else nav.classList.remove('scrolled');

      // reveal sections
      document.querySelectorAll('.reveal').forEach(s => {
        const rect = s.getBoundingClientRect();
        if(rect.top < window.innerHeight * 0.85) s.classList.add('visible');
      });
    });
    // initial reveal
    setTimeout(()=>window.dispatchEvent(new Event('scroll')), 120);

    /*******************************
     * Services open/close
     *******************************/
    document.querySelectorAll('.service-btn').forEach(button=>{
      button.onclick = () => {
        const detail = button.nextElementSibling;
        const isOpen = detail.classList.contains('open');
        document.querySelectorAll('.service-detail').forEach(d=>d.classList.remove('open'));
        if(!isOpen) detail.classList.add('open');
      };
    });

    /*******************************
     * Login form logic (client-side demo)
     *
     * NOTE: This is only a front-end demo.
     * For real authentication, use a secure backend.
     *******************************/
    (function(){
      const toggle = document.getElementById('togglePass');
      const pwd = document.getElementById('password');
      const loginBtn = document.getElementById('loginBtn');
      const msg = document.getElementById('msg');
      const userField = document.getElementById('username');

      // Default demo correct password (change if you like)
      const DEMO_PASSWORD = 'mmparson';

      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        if(pwd.type === 'password'){
          pwd.type = 'text';
          toggle.textContent = 'Hide';
        } else {
          pwd.type = 'password';
          toggle.textContent = 'Show';
        }
      });

      // Live simple feedback: weak / ok length
      pwd.addEventListener('input', () => {
        const v = pwd.value;
        if(!v) {
          msg.textContent = '';
          msg.className = 'msg';
          return;
        }
        if(v.length < 4) {
          msg.textContent = 'Password too short';
          msg.className = 'msg error';
        } else if(v.length < 8) {
          msg.textContent = 'Password is weak';
          msg.className = 'msg error';
        } else {
          msg.textContent = 'Looks good';
          msg.className = 'msg success';
        }
      });

      loginBtn.addEventListener('click', (e) => {
        e.preventDefault();
        const username = (userField.value || '').trim();
        const password = (pwd.value || '').trim();

        if(!username || !password){
          msg.textContent = 'Username à¦“ Password à¦¦à§à¦‡à¦Ÿà§‹à¦‡ à¦¦à¦¿à¦¤à§‡ à¦¹à¦¬à§‡';
          msg.className = 'msg error';
          return;
        }

        // Demo check: only client-side.
        if(password === DEMO_PASSWORD){
          msg.textContent = `Welcome, ${username}! Login successful.`;
          msg.className = 'msg success';
          // show a friendly welcome up top (transient)
          const hero = document.querySelector('.hero h1');
          if(hero){
            hero.textContent = `Welcome ${username}`;
            setTimeout(()=>{ hero.textContent = 'Welcome MM PARSON'; }, 4500);
          }
        } else {
          msg.textContent = 'Password à¦­à§à¦² à¦¹à§Ÿà§‡à¦›à§‡ -- à¦†à¦¬à¦¾à¦° à¦šà§‡à¦• à¦•à¦°à§‹';
          msg.className = 'msg error';
        }
      });
    })();

    /*******************************
     * Accessibility: keyboard nav for service buttons
     *******************************/
    document.querySelectorAll('.service-btn').forEach(b => {
      b.addEventListener('keyup', (e) => {
        if(e.key === 'Enter' || e.key === ' ') b.click();
      });
    });

    /*******************************
     * Extra: pause matrix when window not focused (saves CPU)
     *******************************/
    window.addEventListener('blur', () => {
      clearInterval(matrixInterval);
      matrixInterval = null;
    });
    window.addEventListener('focus', () => {
      if(!matrixInterval) matrixInterval = setInterval(drawMatrix, 33);
    });
  </script>

</body>
